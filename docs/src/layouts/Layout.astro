---
import "../styles/reset.css";
import "../styles/fonts.css";
import "../styles/global.css";

import { ArrowLeftIcon } from "astro-feather";

import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title?: string;
  description?: string;
  isFrontPage?: boolean;
  noindex?: boolean;
  intro?: string;
}
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
const { title, description, noindex, isFrontPage, intro } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    title={title ? `${title} - ${SITE_TITLE}` : SITE_TITLE}
    description={description ?? SITE_DESCRIPTION}
    noindex={noindex}
  />
  <body>
    <div class="container">
      <header>
        <h1 class="site-title">&#x3C;thumb-hash&nbsp;/&#x3E;</h1>
        <slot name="after-header" />
        <nav>
          <ul class="navlist">
            <li class="navlist_item">
              <a
                class="button"
                href="https://github.com/hirasso/thumbhash-custom-element"
                >GitHub</a
              >
            </li>
          </ul>
        </nav>
      </header>
      <slot />
      <Footer />
    </div>
    <style>
      header {
        text-align: center;
        padding: 5vw 4vw;
        display: grid;
        gap: var(--gap);
      }
      .site-title {
        font-size: min(60px, 10vw);
        --_offset: 0.02em;
        font-weight: 200;
        line-height: 0.9;
        letter-spacing: -0.05em;
      }
      .is-h2 {
        padding-block: 0;
      }
    </style>
  </body>
</html>
